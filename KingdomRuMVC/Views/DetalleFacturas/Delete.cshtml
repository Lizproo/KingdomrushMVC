@model KingdomRuMVC.Models.DetalleFactura

@{
    ViewData["Title"] = "Eliminar Detalle";
}

<div style="max-width: 700px; margin: 40px auto; background-color: #fff; border-radius: 15px; padding: 30px; box-shadow: 0 0 15px rgba(0,0,0,0.6); font-family: 'Segoe UI', sans-serif;">
    <h2 style="color: #ff4d4d; font-weight: bold; margin-bottom: 20px;">⚠️ Eliminar Detalle de Factura</h2>

    <p style="font-size: 1.1em; margin-bottom: 20px;">¿Estás seguro que deseas eliminar este registro?</p>

    <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
        <thead>
            <tr style="background-color: #2c2c2c; color: #ffd700;">
                <th style="padding: 12px; text-align: left;">🧱 Producto</th>
                <th style="padding: 12px; text-align: center;">📦 Cantidad</th>
                <th style="padding: 12px; text-align: right;">💰 Precio Unitario</th>
                <th style="padding: 12px; text-align: center;">📌 Estado</th>
            </tr>
        </thead>
        <tbody>
            <tr style="background-color: #f9f9f9;">
                <td style="padding: 12px;">@Model.Id_Producto</td>
                <td style="padding: 12px; text-align: center;">@Model.Cantidad</td>
                <td style="padding: 12px; text-align: right;">$@Model.Precio_Unitario.ToString("N2")</td>
                <td style="padding: 12px; text-align: center;">@Model.Estado_Detalle</td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete" style="text-align: center;">
        <input type="hidden" asp-for="Id_Factura" />
        <input type="submit" value="🗑️ Eliminar" class="btn btn-danger" style="margin-right: 10px;" />
        <a asp-action="Index" class="btn btn-secondary">🔙 Cancelar</a>
    </form>
</div>
