@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Panel de Administración - Kingdom Rush</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'MedievalSharp', cursive;
            background-color: #1a1a1a;
            color: #fff;
            padding: 40px 20px;
            margin: 0;
        }

        .header {
            background: linear-gradient(to right, #ffd700, #c49c1e);
            padding: 20px 30px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 10px #00000070;
            margin-bottom: 40px;
        }

            .header h1 {
                color: #1a1a1a;
                font-size: 2.2em;
                margin: 0;
            }

        nav {
            background-color: #2b2b2b;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 0 15px #00000080;
            max-width: 800px;
            margin: 0 auto;
        }

            nav ul {
                display: flex;
                justify-content: space-around;
                gap: 40px;
                list-style: none;
                padding: 0;
                margin: 0;
                flex-wrap: wrap;
            }

                nav ul li {
                    transition: transform 0.3s ease;
                }

                    nav ul li:hover {
                        transform: scale(1.05);
                    }

                    nav ul li a {
                        color: #ffd700;
                        font-size: 1.2em;
                        text-decoration: none;
                        font-weight: bold;
                        padding: 10px 20px;
                        border: 2px solid #ffd700;
                        border-radius: 8px;
                        transition: all 0.3s ease;
                    }

                        nav ul li a:hover {
                            background-color: #ffd700;
                            color: #1a1a1a;
                        }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 0.9em;
            color: #888;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>👑 Bienvenido al Panel de Administración</h1>
    </div>

    <nav>
        <ul>
            <li>
                <a href="@Url.Action("Index", "Productos")">🛒 Gestión de Productos</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Facturas")">🧾 Ver Facturas</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Usuarios")">👤 Usuarios Registrados</a>
            </li>
        </ul>
    </nav>

    <div class="footer">
        Kingdom Rush © 2025 - Panel Administrativo
    </div>

</body>
</html>
