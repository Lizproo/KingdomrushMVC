@model KingdomRuMVC.Models.Factura

@{
    ViewData["Title"] = "Eliminar Factura";
}

<div style="max-width: 600px; margin: 60px auto; background: #fff; padding: 30px; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.3); text-align: center; font-family: 'Segoe UI', sans-serif;">
    <h2 style="color: #cc0000;">🗑️ ¿Deseas eliminar esta factura?</h2>
    <p style="margin-top: 15px; font-size: 1.1em;">Esta acción no se puede deshacer.</p>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id_Factura" />
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-3">Cancelar</a>
    </form>
</div>
