@model KingdomRuMVC.Models.Factura

@{
    ViewData["Title"] = "Detalle de Factura";
}

<div style="max-width: 700px; margin: 60px auto; background: #fff; padding: 30px; border-radius: 12px; box-shadow: 0 0 15px rgba(0,0,0,0.2); font-family: 'Segoe UI', sans-serif;">
    <h2 class="text-center mb-4" style="color: #f1c40f;">🧾 Factura N° @Model.Id_Factura</h2>

    <dl class="row">
        <dt class="col-sm-4">🧑 Usuario</dt>
        <dd class="col-sm-8">@Model.Id_Usuario</dd>

        <dt class="col-sm-4">📅 Fecha</dt>
        <dd class="col-sm-8">@Model.Fecha?.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-4">💵 Subtotal</dt>
        <dd class="col-sm-8">$@Model.Subtotal?.ToString("F2")</dd>

        <dt class="col-sm-4">🧾 IVA</dt>
        <dd class="col-sm-8">$@Model.Iva?.ToString("F2")</dd>

        <dt class="col-sm-4">💰 Total</dt>
        <dd class="col-sm-8">$@Model.Total?.ToString("F2")</dd>

        <dt class="col-sm-4">📌 Estado</dt>
        <dd class="col-sm-8">@Model.Estado</dd>
    </dl>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id_Factura" class="btn btn-primary">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">🔙 Volver</a>
    </div>
</div>
