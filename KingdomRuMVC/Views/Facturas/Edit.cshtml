@model KingdomRuMVC.Models.Factura

@{
    ViewData["Title"] = "Editar Factura";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
        font-family: Arial, sans-serif;
        padding: 30px;
    }

    h1, h4 {
        color: #ffd700;
        letter-spacing: 1px;
    }

    hr {
        border-top: 1px solid #ffd700;
    }

    .form-container {
        background: #222;
        border-radius: 10px;
        padding: 30px 25px 20px 25px;
        box-shadow: 0 2px 8px #0005;
        max-width: 420px;
        margin: 0 auto 30px auto;
    }

    .form-group label {
        color: #ffd700;
        font-weight: bold;
        margin-bottom: 6px;
    }

    .form-control {
        background: #2a2a2a;
        color: #fff;
        border: 1px solid #444;
        border-radius: 5px;
        padding: 8px 10px;
        margin-bottom: 10px;
        transition: border 0.2s;
    }

        .form-control:focus {
            border: 1.5px solid #ffd700;
            outline: none;
            background: #232323;
        }

    .text-danger {
        color: #ff6b6b !important;
    }

    .btn-guardar {
        background-color: #ffd700;
        color: #222;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        padding: 10px 22px;
        margin-top: 10px;
        transition: background 0.2s;
    }

        .btn-guardar:hover {
            background-color: #f7c700;
            color: #000;
        }

    .back-link {
        color: #ffd700;
        text-decoration: none;
        font-weight: bold;
        margin-top: 20px;
        display: inline-block;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #fff;
            text-shadow: 0 0 5px #ffd700;
        }
</style>

<h1>✏️ Editar Factura</h1>

<div class="form-container">
    <h4>Factura</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id_Factura" />
        <div class="form-group">
            <label asp-for="Id_Usuario" class="control-label"></label>
            <input asp-for="Id_Usuario" class="form-control" />
            <span asp-validation-for="Id_Usuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fecha" class="control-label"></label>
            <input asp-for="Fecha" class="form-control" />
            <span asp-validation-for="Fecha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Subtotal" class="control-label"></label>
            <input asp-for="Subtotal" class="form-control" />
            <span asp-validation-for="Subtotal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Iva" class="control-label"></label>
            <input asp-for="Iva" class="form-control" />
            <span asp-validation-for="Iva" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Total" class="control-label"></label>
            <input asp-for="Total" class="form-control" />
            <span asp-validation-for="Total" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn-guardar" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="back-link">← Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}