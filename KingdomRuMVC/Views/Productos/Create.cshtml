@model KingdomRuMVC.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
        font-family: Arial, sans-serif;
        padding: 30px;
    }

    h1, h4 {
        color: #ffd700;
        letter-spacing: 1px;
    }

    hr {
        border-top: 1px solid #ffd700;
    }

    .form-container {
        background: #222;
        border-radius: 10px;
        padding: 30px 25px 20px 25px;
        box-shadow: 0 2px 8px #0005;
        max-width: 420px;
        margin: 0 auto 30px auto;
    }

    .form-group label {
        color: #ffd700;
        font-weight: bold;
        margin-bottom: 6px;
    }

    .form-control {
        background: #2a2a2a;
        color: #fff;
        border: 1px solid #444;
        border-radius: 5px;
        padding: 8px 10px;
        margin-bottom: 10px;
        transition: border 0.2s;
    }

        .form-control:focus {
            border: 1.5px solid #ffd700;
            outline: none;
            background: #232323;
        }

    .text-danger {
        color: #ff6b6b !important;
    }

    .btn-crear {
        background-color: #ffd700;
        color: #222;
        font-weight: bold;
        border: none;
        border-radius: 4px;
        padding: 10px 22px;
        margin-top: 10px;
        transition: background 0.2s;
    }

        .btn-crear:hover {
            background-color: #f7c700;
            color: #000;
        }

    .back-link {
        color: #ffd700;
        text-decoration: none;
        font-weight: bold;
        margin-top: 20px;
        display: inline-block;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #fff;
            text-shadow: 0 0 5px #ffd700;
        }
</style>

<h1>➕ Crear Producto</h1>

<div class="form-container">
    <h4>Producto</h4>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio" class="control-label"></label>


            <input asp-for="Precio" class="form-control" type="number" min="0.01" step="0.01" />


            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Imagen_Url" class="control-label"></label>
            <input asp-for="Imagen_Url" class="form-control" />
            <span asp-validation-for="Imagen_Url" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Categoria" class="control-label"></label>

            <select asp-for="Categoria" class="form-control">
                <option value="Juegos PS4">Juegos PS4</option>
                <option value="Juegos PS5">Juegos PS5</option>
                <option value="Juegos Xbox">Juegos Xbox</option>
                <option value="Juegos Nintendo">Juegos Nintendo</option>
                <option value="Juegos PC">Juegos PC</option>
                <option value="Consolas">Consolas</option>
                <option value="Accesorios">Accesorios</option>
                <option value="Camisetas">Camisetas</option>
                <option value="Chaquetas">Chaquetas</option>
                <option value="Gorras">Gorras</option>
            </select>

            <span asp-validation-for="Categoria" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Usa_Talla" class="control-label"></label>

            <select asp-for="Usa_Talla" class="form-control">
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="Usa_Talla" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="Stock" class="control-label"></label>


            <input asp-for="Stock" class="form-control" type="number" min="1" step="1" />


            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn-crear" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index" class="back-link">← Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}