@model KingdomRuMVC.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<style>
    .producto-detalles-container {
        max-width: 700px;
        margin: 60px auto;
        background: #fdfdfd;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.15);
        font-family: 'Segoe UI', sans-serif;
    }

        .producto-detalles-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #4b0082;
        }

    .producto-tabla {
        width: 100%;
        border-collapse: collapse;
    }

        .producto-tabla td {
            padding: 10px 15px;
            border-bottom: 1px solid #ddd;
        }

            .producto-tabla td:first-child {
                font-weight: bold;
                width: 40%;
                color: #333;
            }

            .producto-tabla td:last-child {
                color: #555;
            }

    .btn-group {
        text-align: center;
        margin-top: 25px;
    }

        .btn-group a {
            margin: 0 8px;
        }
</style>

<div class="producto-detalles-container">
    <h2>📦 Detalles del Producto</h2>

    <table class="producto-tabla">
        <tr>
            <td>📛 Nombre</td>
            <td>@Model.Nombre</td>
        </tr>
        <tr>
            <td>💲 Precio</td>
            <td>$@Model.Precio.ToString("F2")</td>
        </tr>
        <tr>
            <td>🖼️ Imagen URL</td>
            <td>@Model.Imagen_Url</td>
        </tr>
        <tr>
            <td>🏷️ Categoría</td>
            <td>@Model.Categoria</td>
        </tr>
        <tr>
            <td>📐 Usa Talla</td>
            <td>@((Model.Usa_Talla ?? false) ? "Sí" : "No")</td>
        </tr>
        <tr>
            <td>📦 Stock</td>
            <td>@Model.Stock</td>
        </tr>
    </table>

    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-secondary">🔙 Volver</a>
    </div>
</div>
