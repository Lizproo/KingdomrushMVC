@model KingdomRuMVC.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet" />
    <style>
        body {
            background-color: #1a1a1a;
            color: #fce97b;
            font-family: 'MedievalSharp', cursive;
            padding: 50px;
            text-align: center;
        }

        h1 {
            font-size: 2.2em;
            color: #ffd700;
            text-shadow: 2px 2px 5px #000;
        }

        .form-container {
            background-color: rgba(30, 30, 30, 0.95);
            border: 3px solid #d4af37;
            border-radius: 14px;
            padding: 30px;
            max-width: 500px;
            margin: auto;
            box-shadow: 0 0 25px rgba(212, 175, 55, 0.5);
        }

        label, input, .validation-message {
            color: #ffd700;
            display: block;
            width: 100%;
        }

        input {
            background: #111;
            border: 2px solid #d4af37;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .validation-message {
            color: #ff6b6b;
            font-size: 0.9em;
        }

        button {
            background: #d4af37;
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            cursor: pointer;
            font-weight: bold;
            width: 100%;
        }

        .extra-buttons a {
            color: #ffd700;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>🔐 Inicio de Sesión</h1>

    <div class="form-container">
        <form asp-controller="Usuarios" asp-action="Login" method="post">
            <div>
                <label asp-for="Correo"></label>
                <input asp-for="Correo" />
                <span class="validation-message" asp-validation-for="Correo"></span>
            </div>
            <div>
                <label asp-for="Clave"></label>
                <input asp-for="Clave" type="password" />
                <span class="validation-message" asp-validation-for="Clave"></span>
            </div>
            @if (ViewBag.LoginError != null)
            {
                <div class="validation-message">@ViewBag.LoginError</div>
            }
            <button type="submit">Entrar</button>
        </form>

        <div class="extra-buttons">
            <a href="/Usuarios/Create">📝 Crear cuenta</a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
