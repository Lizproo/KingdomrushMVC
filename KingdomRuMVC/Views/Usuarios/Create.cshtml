@model KingdomRuMVC.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Registro de Guerrero</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&display=swap" rel="stylesheet" />
    <style>
        body {
            background-color: #1a1a1a;
            color: #fce97b;
            font-family: 'MedievalSharp', cursive;
            padding: 50px;
            text-align: center;
            background-repeat: repeat;
        }

        h1 {
            font-size: 2.2em;
            color: #ffd700;
            text-shadow: 2px 2px 5px #000;
            margin-bottom: 30px;
        }

            h1::before {
                content: "📜 ";
            }

        .form-container {
            background-color: rgba(30, 30, 30, 0.95);
            border: 3px solid #d4af37;
            border-radius: 14px;
            padding: 30px;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 0 25px rgba(212, 175, 55, 0.5);
            text-align: left;
            backdrop-filter: blur(2px);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            color: #ffd700;
            margin-bottom: 5px;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 2px solid #d4af37;
            background-color: #111;
            color: #ffd700;
            font-family: inherit;
            font-size: 1em;
        }

            input:focus, textarea:focus {
                outline: none;
                background-color: #222;
                box-shadow: 0 0 8px #d4af37;
            }

        textarea {
            resize: vertical;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 0.9em;
            margin-top: 4px;
            display: block;
        }

        button {
            background-color: #d4af37;
            color: #1a1a1a;
            border: none;
            padding: 12px 25px;
            font-size: 1em;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 20px;
            width: 100%;
        }

            button:hover {
                background-color: #fce97b;
            }

        .volver-inicio-top {
            position: absolute;
            top: 20px;
            left: 20px;
            background-color: #2e2e2e;
            color: #ffd700;
            text-decoration: none;
            font-weight: bold;
            padding: 10px 18px;
            border-radius: 8px;
            border: 2px solid #d4af37;
            z-index: 999;
        }

            .volver-inicio-top:hover {
                background-color: #3d3d3d;
                color: #ffffff;
                box-shadow: 0 0 8px #d4af37;
            }
    </style>
</head>
<body>
    <a href="/Home/Index" class="volver-inicio-top">⬅ Volver al Inicio</a>

    <h1>Registro de Guerrero</h1>
    <div class="form-container">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Apellido"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Edad"></label>
                <input asp-for="Edad" type="number" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" type="email" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion"></label>
                <textarea asp-for="Direccion" class="form-control"></textarea>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clave"></label>
                <input asp-for="Clave" class="form-control" type="password" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <button type="submit">Registrar Guerrero</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
